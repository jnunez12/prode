<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
	<h2 class="form-signin-heading"> Editar el usuario</h2>

	
	
	
	<input value="<%= user.nombre %>" name="nombre" type="text" class="form-control"/>
	<input value="<%= user.password %>" name="password" type="password" class="form-control"/>
	<input value="" name="passwordConfirm" type="password" class="form-control"/>

	<% if (session.authenticated && session.User.admin) { %>
		<% if (user.admin) { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin" checked>Admin </label>
	 	<% } else { %>
	 		<input type="hidden" name="admin" value="unchecked">
	 		<label class="checkbox"><input type="checkbox" name="admin"> Admin</label>
	 	<% } %>
	<% } %>
	
	<input type="submit" value="Confirmar" class="btn btn-lg btn-primary btn-block"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />

</form>